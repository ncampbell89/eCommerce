<!DOCTYPE html>
<html lang="en">
  <% include partials/CMShead %>
  <body>
    <% include partials/CMSheader %>
<!--    <script src="products.ejs"></script>-->
    <main class="container d-flex justify-content-center">
      <!-- <%= productData %> -->
        <form method="post" action="/cms/editProduct/<%= productData._id %>" class="productForm" enctype="multipart/form-data">
          <input type="text" name="name" placeholder="Product Name" value="<%= productData.name %>" />
          <br>
          <input name="desc" value="<%= productData.desc %>"></input>
          <br>
          <input type="number" min="0.00" max="10000.00" step="0.01" value="<%= productData.price %>" />
          <br>
          <input type="number" name="quantity" placeholder="Quantity" value="<%= productData.quantity %>" />
          <br>
          <input type="file" name="file" />
          <br>
          <input type="submit" value="Save Changes" />
        </form> 
    </main>
    <% include partials/footer %>
  </body>
</html>
